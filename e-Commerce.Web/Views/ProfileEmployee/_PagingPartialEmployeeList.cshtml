
@using e_Commerce.Web.Business.Common
@model e_Commerce.Web.Models.ProfileEmployee.BatchEditViewModel

<ul class="pagination pagination-sm">
    @if (Model.EmployeeList.DataList.HasPreviousPage)
    {
        <li class="page-item">
            <a class="page-link btn-info" href="javascript:void(0)" onclick="ClickPagingEmployee('@(Model.EmployeeList.DataList.CurrentPage-1)','@Model.EmployeeList.DataList.PageSize')"> Previous </a>
        </li>
    }

    @for (int paginationIndex = Model.EmployeeList.DataList.CurrentPage - 3; paginationIndex < Model.EmployeeList.DataList.CurrentPage; paginationIndex++)
    {
        if (paginationIndex <= 0)
        {
            continue;
        }

        <li class="page-item">
            <a class="page-link" href="javascript:void(0)" onclick="ClickPagingEmployee('@(paginationIndex)','@Model.EmployeeList.DataList.PageSize')">@(paginationIndex)</a>
        </li>
    }

    <li class="page-item active">
        <a class="page-link" href="javascript:void(0)" onclick="ClickPagingEmployee('@(Model.EmployeeList.DataList.CurrentPage)','@Model.EmployeeList.DataList.PageSize')">@(Model.EmployeeList.DataList.CurrentPage)</a>
    </li>

    @for (int paginationIndex = Model.EmployeeList.DataList.CurrentPage + 1; paginationIndex < Model.EmployeeList.DataList.TotalPages + 1; paginationIndex++)
    {
        if (paginationIndex > Model.EmployeeList.DataList.TotalPages || paginationIndex > (Model.EmployeeList.DataList.CurrentPage + 3))
        {
            break;
        }

        <li class="page-item">
            <a class="page-link" href="javascript:void(0)" onclick="ClickPagingEmployee('@(paginationIndex)','@Model.EmployeeList.DataList.PageSize')">@(paginationIndex)</a>
        </li>
    }

    @if (Model.EmployeeList.DataList.HasNextPage)
    {
        <li class="page-item">
            <a class="page-link btn-info" href="javascript:void(0)" onclick="ClickPagingEmployee('@(Model.EmployeeList.DataList.CurrentPage+1)','@Model.EmployeeList.DataList.PageSize')">Next</a>
        </li>
    }

    <li class="page-item">
        <span class="small">&nbsp;Current Size</span> @Html.TextBox("txtEmployeeCurrentPage", "", new { @class = "form-control form-control-sm d-inline-block onlyNumberEntry", @id = "txtEmployeeCurrentPage", @style = "width:60px; height:calc(1.5em + 0.5rem - 2px); " })
    </li>

    <li class="page-item">
        <span class="small">&nbsp; Total Pages: @Model.EmployeeList.DataList.TotalPages </span>
    </li>

</ul>

