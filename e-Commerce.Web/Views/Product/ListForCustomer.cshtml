        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <span>Tüm Kategoriler</span>
                        </div>
                        <ul>
                            @foreach (var item in Model.FilterCategorySelectList)
                            {
                                <li id="category_id_@item.Value" class="categorySelect">@item.Text</li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            @Html.TextBoxFor(m => m.Filter.Filter_NameTR, new { @class = "", @placeholder = "Name TR" , @style = "height:46px;border:none;" })
