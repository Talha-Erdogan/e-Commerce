@using e_Commerce.Web.Business.Common
@using e_Commerce.Web.Business.Enums
@using e_Commerce.Web.Controllers

@model e_Commerce.Web.Models.Product.ListForCustomerViewModel

@{
    ViewData["Title"] = "Product List For Customer";
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}


@using (Html.BeginForm("ListForCustomer", "Product", FormMethod.Post, new { @class = "form-horizontal input-sm", @id = "filterForm" }))
{
