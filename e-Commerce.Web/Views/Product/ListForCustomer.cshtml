@section Scripts {
    <!-- pagesize ve current page js  -->
    <script>
        $(document).ready(function () {

            $(".categorySelect").click(function (e) {
                var categoryId = this.id.replace("category_id_", "");
                $('#hiddenCategoryId').val(categoryId);
                $('#filterForm').submit();
            });
        }); // end of $(document).ready


