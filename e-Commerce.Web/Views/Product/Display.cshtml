@using e_Commerce.Web.Business.Common
@using e_Commerce.Web.Controllers
@using e_Commerce.Web.Business.Enums

@model e_Commerce.Web.Business.Models.Product.Product

@{
    ViewData["Title"] = "Display News";
}
@section Styles{
    <style>
        .carousel, .slide {
            width: 500px;
        }
    </style>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>Display Product </strong>
            </div>
            <div class="card-body">


                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Name TR</label>
                    <div class="col-md-4" style="border: solid 2px #f0f3f5">
                        @Model.NameTR
                    </div>

                    <label class="col-md-2 col-form-label">Name EN</label>
                    <div class="col-md-4" style="border: solid 2px #f0f3f5">
                        @Model.NameEN
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Description TR</label>
                    <div class="col-md-4" style="border: solid 2px #f0f3f5">
                        @Model.DescriptionTR
                    </div>

                    <label class="col-md-2 col-form-label">Description EN</label>
                    <div class="col-md-4" style="border: solid 2px #f0f3f5">
                        @Model.DescriptionEN
                    </div>
                </div>

                <div class="form-group row">

                    @if (!String.IsNullOrEmpty(Model.ImageFilePath))
                    {
                        <label class="col-md-2 col-form-label">Image File Path</label>
                        <div class="col-md-10 ">
                            <div class="">
                                <img src="@Url.Content(Model.ImageFilePath)" alt="@Url.Content(Model.ImageFilePath)" width="70" height="50">
                                <hr />
                            </div>
                        </div>

                    }
                    else
                    {
                        <label class="col-md-2 col-form-label">Image File Path</label> <div class="col-md-10">
                            -
                        </div>
                    }

                </div>
               
                <div class="form-group row">
                    <div class="col-md-12 text-center mt-4">
                        <a class="btn btn-sm btn-primary" href="~/Product/List">Back</a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">

                        @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="text-danger">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        @if (ViewBag.ErrorMessageList != null)
                        {
                            <div class="text-danger">
                                @foreach (var item in ViewBag.ErrorMessageList)
                                {
                                    <span>@item</span>
                                    <br />
                                }
                            </div>
                        }

                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /.col-->
</div>
